<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Static color palette (dark theme defaults; WPF-UI overrides via DynamicResource) -->
    <Color x:Key="AccentBaseColor">#0078D4</Color>
    <SolidColorBrush x:Key="AccentBrush"           Color="#0078D4" />
    <SolidColorBrush x:Key="AccentHoverBrush"       Color="#1084D8" />
    <SolidColorBrush x:Key="AccentPressedBrush"     Color="#006CC1" />

    <!-- Animation easing -->
    <CubicEase x:Key="FluentEaseOut"   EasingMode="EaseOut" />
    <CubicEase x:Key="FluentEaseIn"    EasingMode="EaseIn" />
    <CubicEase x:Key="FluentEaseInOut" EasingMode="EaseInOut" />

    <!-- Durations -->
    <Duration x:Key="FluentAnimDurationFast">0:0:0.1</Duration>
    <Duration x:Key="FluentAnimDurationNormal">0:0:0.2</Duration>
    <Duration x:Key="FluentAnimDurationSlow">0:0:0.3</Duration>

    <!-- Typography -->
    <sys:Double x:Key="BodyFontSize">14</sys:Double>
    <sys:Double x:Key="SubtitleFontSize">16</sys:Double>
    <sys:Double x:Key="TitleFontSize">20</sys:Double>
    <sys:Double x:Key="HeaderFontSize">24</sys:Double>

    <!-- Spacing -->
    <sys:Double x:Key="SmallSpacing">4</sys:Double>
    <sys:Double x:Key="MediumSpacing">8</sys:Double>
    <sys:Double x:Key="LargeSpacing">16</sys:Double>
    <sys:Double x:Key="XLargeSpacing">24</sys:Double>

</ResourceDictionary>
