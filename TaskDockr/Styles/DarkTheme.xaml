<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Window / page backgrounds -->
    <SolidColorBrush x:Key="ApplicationBackgroundBrush"              Color="#1E1E1E" />
    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush"      Color="#252526" />
    <SolidColorBrush x:Key="CardBackgroundFillColorSecondaryBrush"    Color="#2D2D2D" />

    <!-- Text -->
    <SolidColorBrush x:Key="TextFillColorPrimaryBrush"               Color="#D4D4D4" />
    <SolidColorBrush x:Key="TextFillColorSecondaryBrush"             Color="#9D9D9D" />
    <SolidColorBrush x:Key="TextFillColorDisabledBrush"              Color="#555555" />

    <!-- Control fills -->
    <SolidColorBrush x:Key="ControlFillColorDefaultBrush"            Color="#3C3C3C" />
    <SolidColorBrush x:Key="ControlFillColorSecondaryBrush"          Color="#454545" />
    <SolidColorBrush x:Key="ControlFillColorTertiaryBrush"           Color="#505050" />
    <SolidColorBrush x:Key="ControlFillColorDisabledBrush"           Color="#2A2A2A" />

    <!-- Borders / strokes -->
    <SolidColorBrush x:Key="ControlStrokeColorDefaultBrush"          Color="#3F3F3F" />
    <SolidColorBrush x:Key="ControlStrokeColorSecondaryBrush"        Color="#505050" />

    <!-- Hover / selected -->
    <SolidColorBrush x:Key="SubtleFillColorSecondaryBrush"           Color="#2A2D2E" />
    <SolidColorBrush x:Key="SubtleFillColorTertiaryBrush"            Color="#37373D" />

    <!-- Accent (blue) -->
    <SolidColorBrush x:Key="SystemAccentColorBrush"                  Color="#0078D4" />
    <SolidColorBrush x:Key="SystemAccentColorLight1Brush"            Color="#1A86D8" />

    <!-- Text box specific -->
    <SolidColorBrush x:Key="TextControlBackgroundBrush"              Color="#3C3C3C" />
    <SolidColorBrush x:Key="TextControlForegroundBrush"              Color="#D4D4D4" />
    <SolidColorBrush x:Key="TextControlBorderBrush"                  Color="#3F3F3F" />

</ResourceDictionary>
