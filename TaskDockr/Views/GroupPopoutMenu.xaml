<UserControl
    x:Class="TaskDockr.Views.GroupPopoutMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="clr-namespace:TaskDockr.Models">

    <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8"
            Padding="12">
        <StackPanel>
            <!-- Group name -->
            <TextBlock Text="{Binding Group.Name}"
                       FontWeight="SemiBold" FontSize="15"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                       Margin="0,0,0,10" />

            <!-- Shortcuts -->
            <ItemsControl ItemsSource="{Binding Shortcuts}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:Shortcut}">
                        <Button Content="{Binding Name}"
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                Style="{StaticResource SubtleButtonStyle}"
                                Padding="10,8"
                                Margin="0,2"
                                Click="OnShortcutClick" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Separator Margin="0,10" />

            <Button Content="Edit Group" HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Style="{StaticResource SubtleButtonStyle}"
                    Padding="10,8" Margin="0,2"
                    Click="OnEditGroupClick" />
            <Button Content="Add Shortcut" HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Style="{StaticResource SubtleButtonStyle}"
                    Padding="10,8" Margin="0,2"
                    Click="OnAddShortcutClick" />
        </StackPanel>
    </Border>
</UserControl>
